<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
        <label for="tilte">Title of course</label>
        <span class="helper-text" data-error="wrong title"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" value="{{course.price}}" required min="1">
        <label for="price">Price</label>
        <span class="helper-text" data-error="wrong price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" value="{{course.img}}" required>
        <label for="img">URL of image</label>
        <span class="helper-text" data-error="wrong image"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn red">Remove course</button>
</form>
